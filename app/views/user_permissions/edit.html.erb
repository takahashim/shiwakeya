<div class="max-w-4xl mx-auto p-6">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-2xl font-bold text-gray-900">ユーザー権限編集</h2>
      <p class="mt-1 text-sm text-gray-600"><%= @user.email %></p>
    </div>
    
    <%= form_with model: @user, url: user_permission_path(@user), method: :patch, local: true do |form| %>
      <div class="p-6">
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700">役割</label>
          <div class="mt-2 space-y-2">
            <div>
              <%= form.radio_button :role, 'admin', class: "mr-2" %>
              <%= form.label :role_admin, "管理者", class: "text-sm" %>
              <p class="ml-6 text-xs text-gray-500">全ての機能とスプレッドシートにアクセス可能</p>
            </div>
            <div>
              <%= form.radio_button :role, 'accountant', class: "mr-2" %>
              <%= form.label :role_accountant, "会計担当者", class: "text-sm" %>
              <p class="ml-6 text-xs text-gray-500">全てのスプレッドシートの閲覧・編集が可能</p>
            </div>
            <div>
              <%= form.radio_button :role, 'member', class: "mr-2" %>
              <%= form.label :role_member, "メンバー", class: "text-sm" %>
              <p class="ml-6 text-xs text-gray-500">許可されたスプレッドシートのみアクセス可能</p>
            </div>
          </div>
        </div>

        <div class="mb-6" id="spreadsheet-permissions" style="<%= @user.role_member? ? '' : 'display: none;' %>">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            スプレッドシートアクセス権限
          </label>
          <div class="border rounded-lg divide-y">
            <% @spreadsheets.each do |spreadsheet| %>
              <% permission = @user_permissions.find { |p| p.service_spreadsheet_id == spreadsheet.id } %>
              <div class="p-4">
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <label class="font-medium text-sm">
                      <%= check_box_tag "permissions[#{spreadsheet.id}][grant]", "1", 
                          permission.present?, class: "mr-2" %>
                      <%= spreadsheet.name %>
                    </label>
                    <p class="text-xs text-gray-500 ml-6">
                      ID: <%= spreadsheet.spreadsheet_id %>
                    </p>
                  </div>
                  <div class="ml-4">
                    <label class="text-sm">
                      <%= check_box_tag "permissions[#{spreadsheet.id}][can_edit]", "1", 
                          permission&.can_edit?, class: "mr-2" %>
                      編集可能
                    </label>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "キャンセル", user_permissions_path, 
              class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= form.submit "更新", 
              class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const roleRadios = document.querySelectorAll('input[name="user[role]"]');
    const permissionsDiv = document.getElementById('spreadsheet-permissions');
    
    roleRadios.forEach(radio => {
      radio.addEventListener('change', function() {
        if (this.value === 'member') {
          permissionsDiv.style.display = 'block';
        } else {
          permissionsDiv.style.display = 'none';
        }
      });
    });
  });
</script>