<div class="max-w-6xl mx-auto p-6">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-2xl font-bold text-gray-900">ユーザー権限管理</h2>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              メールアドレス
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              名前
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              役割
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              アクセス可能なシート数
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              登録日
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              操作
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @users.each do |user| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= user.email %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= user.name %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% role_class = if user.role_admin?
                     'bg-red-100 text-red-800'
                   elsif user.role_accountant?
                     'bg-blue-100 text-blue-800'
                   else
                     'bg-gray-100 text-gray-800'
                   end %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= role_class %>">
                  <%= if user.role_admin?
                      '管理者'
                    elsif user.role_accountant?
                      '会計担当者'
                    else
                      'メンバー'
                    end %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if user.role_admin? || user.role_accountant? %>
                  <span class="text-green-600">全シート</span>
                <% else %>
                  <%= user.user_spreadsheet_permissions.count %> シート
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= user.created_at.strftime("%Y/%m/%d") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <% unless user == current_user %>
                  <%= link_to "権限編集", edit_user_permission_path(user), 
                      class: "text-indigo-600 hover:text-indigo-900" %>
                <% else %>
                  <span class="text-gray-400">（自分自身）</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>