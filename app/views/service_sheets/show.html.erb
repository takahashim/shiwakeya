<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <nav class="text-sm mb-2">
          <%= link_to "スプレッドシート", service_spreadsheets_path, class: "text-blue-600 hover:text-blue-800" %> /
          <%= link_to @service_spreadsheet.name, service_spreadsheet_path(@service_spreadsheet), class: "text-blue-600 hover:text-blue-800" %> /
          <span class="text-gray-600"><%= @service_sheet.sheet_name %></span>
        </nav>
        <h1 class="text-3xl font-bold text-gray-900"><%= @service_sheet.sheet_name %></h1>
        <p class="text-gray-600 mt-1">
          用途: <%= @service_sheet.purpose %> | 
          最終同期: <%= @service_sheet.last_synced_at ? time_ago_in_words(@service_sheet.last_synced_at) + "前" : "未同期" %>
        </p>
      </div>
      <div class="flex space-x-2">
        <%= button_to "データを同期", service_spreadsheet_service_sheet_sync_path(@service_spreadsheet, @service_sheet),
            method: :post,
            class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
        <% if admin? %>
          <%= button_to "データクリア", service_spreadsheet_service_sheet_clear_path(@service_spreadsheet, @service_sheet),
              method: :delete,
              data: { turbo_confirm: "本当にデータをクリアしますか？" },
              class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
        <% end %>
        <%= link_to "戻る", service_spreadsheet_path(@service_spreadsheet),
            class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700" %>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <% if @data && @data.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider sticky left-0 bg-gray-50">
                #
              </th>
              <% if @data.first %>
                <% @data.first.each_with_index do |header, index| %>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= ('A'..'Z').to_a[index] || index + 1 %>
                  </th>
                <% end %>
              <% end %>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @data.each_with_index do |row, row_index| %>
              <tr class="<%= row_index == 0 ? 'bg-blue-50 font-semibold' : 'hover:bg-gray-50' %>">
                <td class="px-4 py-2 text-sm text-gray-900 sticky left-0 bg-white">
                  <%= row_index + 1 %>
                </td>
                <% row.each do |cell| %>
                  <td class="px-4 py-2 text-sm text-gray-900 whitespace-nowrap">
                    <%= cell %>
                  </td>
                <% end %>
                <% if row.length < (@data.first&.length || 0) %>
                  <% ((@data.first&.length || 0) - row.length).times do %>
                    <td class="px-4 py-2 text-sm text-gray-900 whitespace-nowrap"></td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class="px-6 py-3 bg-gray-50 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          合計 <%= @data.size %> 行のデータを表示中
        </p>
      </div>

      <% if logged_in? && @service_sheet.purpose == 'input' %>
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-700 mb-3">新しい行を追加</h3>
          <%= form_with url: service_spreadsheet_service_sheet_append_path(@service_spreadsheet, @service_sheet),
                        method: :post, local: true, class: "flex space-x-2" do |f| %>
            <% if @data.first %>
              <% @data.first.each_with_index do |header, index| %>
                <%= f.text_field "row_data[col#{index}]", 
                    placeholder: header,
                    class: "px-3 py-2 border border-gray-300 rounded-md text-sm" %>
              <% end %>
            <% end %>
            <%= f.submit "追加", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="p-12 text-center">
        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">データがありません</h3>
        <p class="text-gray-600 mb-4">このシートにはデータがないか、まだ同期されていません</p>
        <%= button_to "データを同期", service_spreadsheet_service_sheet_sync_path(@service_spreadsheet, @service_sheet),
            method: :post,
            class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>