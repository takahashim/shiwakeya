<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-900">スプレッドシート一覧</h1>
      <% if admin? %>
        <%= link_to "新規追加", new_service_spreadsheet_path,
            class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <% end %>
    </div>
  </div>

  <% if @service_spreadsheets.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @service_spreadsheets.each do |spreadsheet| %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow">
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              <%= link_to spreadsheet.name, service_spreadsheet_path(spreadsheet), 
                  class: "hover:text-blue-600" %>
            </h3>
            
            <div class="text-sm text-gray-600 space-y-1 mb-4">
              <p><%= spreadsheet.description %></p>
              <p>シート数: <%= spreadsheet.service_sheets.count %></p>
              <p>ステータス: 
                <span class="<%= spreadsheet.is_active ? 'text-green-600' : 'text-gray-400' %>">
                  <%= spreadsheet.is_active ? 'アクティブ' : '非アクティブ' %>
                </span>
              </p>
            </div>

            <div class="flex space-x-2">
              <%= link_to "開く", service_spreadsheet_path(spreadsheet),
                  class: "flex-1 text-center px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
              <%= button_to "同期", service_spreadsheet_sync_path(spreadsheet),
                  method: :post,
                  class: "flex-1 text-center px-3 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="w-24 h-24 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">スプレッドシートが登録されていません</h3>
      <p class="text-gray-600 mb-6">管理者に連絡してスプレッドシートを登録してもらってください</p>
      <% if admin? %>
        <%= link_to "スプレッドシートを追加", new_service_spreadsheet_path,
            class: "inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
      <% end %>
    </div>
  <% end %>
</div>